name 'gpgme'
org 'amylum'

licenses 'COPYING.LESSER'

deps(
  libassuan: '2.4.3-12',
  'libgpg-error': '1.27-1'
)

configure_flags(
  prefix: '/usr',
  'enable-maintainer-mode': nil,
  host: 'x86_64-pc-linux-gnu'
)
remove_linker_archives

cflags
libs %w(gpg-error assuan)
harden

patch 'error_t.patch'

build do
  run './autogen.sh'
  configure
  make
  install
end

