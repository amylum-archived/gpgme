name 'gpgme'
org 'amylum'

licenses 'COPYING.LESSER'

deps(
  libassuan: {
    version: '2.5.1-1',
    checksum: '42030909765a93a1da85f30097831b3a13b297c11c2b43d2845511b82c367791'
  },
  'libgpg-error': {
    version: '1.27-1',
    checksum: '7ae57f06296bf6ef98fc450f7ef7d1a47753d429c1cdc440045a03ed108d58de'
  }
)

configure_flags(
  prefix: '/usr',
  'enable-maintainer-mode': nil,
  host: 'x86_64-pc-linux-gnu'
)
remove_linker_archives

cflags
libs %w(gpg-error assuan)
harden

patch 'error_t.patch'

build do
  run './autogen.sh'
  configure
  make
  install
end

