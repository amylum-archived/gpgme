name 'gpgme'
org 'amylum'

licenses 'COPYING.LESSER'

deps(
  libassuan: {
    version: '2.5.3-2',
    checksum: 'e0d64ecd038b8548e81cc0e1c3bebd088b5525dfb8a79d3d2a6347c73987144d'
  },
  'libgpg-error': {
    version: '1.36-1',
    checksum: 'a04c7d61e948f47cb0efaa26c9185f123d8e480e73a367617facb86e85ea7839'
  }
)

configure_flags(
  prefix: '/usr',
  'enable-maintainer-mode': nil,
  host: 'x86_64-pc-linux-gnu'
)
remove_linker_archives
remove_pkgconfig_files

cflags
libs %w(gpg-error assuan)
harden

patch 'error_t.patch'

build do
  run './autogen.sh'
  configure
  make
  run 'find .libs -name "*.so*" -type f | xargs chrpath -d'
  install
  run "find .libs -name '*.so*' ! -name '*T' -type f | xargs -n1 -I{} cp {} #{releasedir}/usr/lib"
end

test do
  # TODO: add tests
end
