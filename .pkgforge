name 'gpgme'
org 'amylum'

licenses 'COPYING.LESSER'

deps(
  libassuan: {
    version: '2.5.1-5',
    checksum: '644c7fc29d2b92e0226a156ab37561b50f0cae23675ba0b64728c23daf8c528e'
  },
  'libgpg-error': {
    version: '1.31-1',
    checksum: '8f405a9f6936a5e17e992bd69211a0e22cfa52a18abcc8eb217ea86a1871085a'
  }
)

configure_flags(
  prefix: '/usr',
  'enable-maintainer-mode': nil,
  host: 'x86_64-pc-linux-gnu'
)
remove_linker_archives

cflags
libs %w(gpg-error assuan)
harden

patch 'error_t.patch'

build do
  run './autogen.sh'
  configure
  make
  install
end

