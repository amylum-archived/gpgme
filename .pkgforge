name 'gpgme'
org 'amylum'

licenses 'COPYING.LESSER'

deps(
  libassuan: {
    version: '2.5.1-2',
    checksum: '01e2a567ab7d555245856556f240f7ecc00d0a69cbc06db8bb7a26c46571229b'
  },
  'libgpg-error': {
    version: '1.28-1',
    checksum: '55eec88e8ef7164bc4c2a851fb1f8128f3fe0b0a5e464db77725affb19191f6e'
  }
)

configure_flags(
  prefix: '/usr',
  'enable-maintainer-mode': nil,
  host: 'x86_64-pc-linux-gnu'
)
remove_linker_archives

cflags
libs %w(gpg-error assuan)
harden

patch 'error_t.patch'

build do
  run './autogen.sh'
  configure
  make
  install
end

